{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "declaration": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true,
        "pretty": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
